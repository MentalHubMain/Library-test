    USAGE EXAMPLE:
    ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    local SX = loadstring(game:HttpGet("YOUR_RAW_URL"))()

    local Window = SX:CreateWindow({
        Title   = "My Hub",
        SubTitle = "v1.0.0",
        Theme   = "Dark",       -- "Dark" | "Light" | "Midnight"
        Key     = Enum.KeyCode.RightShift,
        Config  = "MyHub",      -- config save name (nil = no saving)
        Intro   = true,
    })

    local Tab = Window:AddTab({ Title = "Main", Icon = "rbxassetid://..." })
    local Section = Tab:AddSection({ Title = "Combat" })

    Section:AddToggle({ Title = "God Mode", Default = false,
        Callback = function(v) print(v) end })

    Section:AddSlider({ Title = "Speed", Min = 16, Max = 500,
        Default = 16, Increment = 1,
        Callback = function(v) game.Players.LocalPlayer.Character
            .Humanoid.WalkSpeed = v end })

    Section:AddDropdown({ Title = "Team", Options = {"Red","Blue","Green"},
        Default = "Red", Searchable = true,
        Callback = function(v) print(v) end })
]]

