    -- Search bar
    local searchBox
    do
        local searchFrame = Utility.Create("Frame", {
            Size              = UDim2.new(0, 180, 0, 28),
            AnchorPoint       = Vector2.new(0.5, 0.5),
            Position          = UDim2.new(0.5, 0, 0.5, 0),
            BackgroundColor3  = theme.Surface3,
            ZIndex            = 5,
            Parent            = titlebar,
        })
        Utility.AddCorner(searchFrame, UDim.new(1, 0))
        Utility.AddStroke(searchFrame, theme.Border, 1)

        Utility.Create("TextLabel", {
            Size              = UDim2.new(0, 16, 1, 0),
            Position          = UDim2.new(0, 8, 0, 0),
            BackgroundTransparency = 1,
            Text              = "üîç",
            TextSize          = 11,
            Font              = Enum.Font.Gotham,
            ZIndex            = 6,
            Parent            = searchFrame,
        })

        searchBox = Utility.Create("TextBox", {
            Size              = UDim2.new(1, -30, 1, 0),
            Position          = UDim2.new(0, 24, 0, 0),
            BackgroundTransparency = 1,
            PlaceholderText   = "Search...",
            PlaceholderColor3 = theme.TextDim,
            TextColor3        = theme.TextPrimary,
            TextSize          = 12,
            Font              = Enum.Font.Gotham,
            TextXAlignment    = Enum.TextXAlignment.Left,
            ClearTextOnFocus  = false,
            ZIndex            = 6,
            Parent            = searchFrame,
        })

        searchBox.Focused:Connect(function()
            Utility.Tween(searchFrame:FindFirstChildOfClass("UIStroke") or searchFrame,
                TWEEN_FAST, { Color = theme.Accent })
        end)
        searchBox.FocusLost:Connect(function()
            Utility.Tween(searchFrame:FindFirstChildOfClass("UIStroke") or searchFrame,
                TWEEN_FAST, { Color = theme.Border })
        end)
    end

    -- Window controls
    local ctrlFrame = Utility.Create("Frame", {
        Size              = UDim2.new(0, 90, 0, 28),
        Position          = UDim2.new(1, -102, 0.5, -14),
        BackgroundTransparency = 1,
        ZIndex            = 5,
        Parent            = titlebar,
    })
    Utility.AddListLayout(ctrlFrame, Enum.FillDirection.Horizontal,
        UDim.new(0, 5), Enum.SortOrder.LayoutOrder)

    local function makeCtrlBtn(label, color)
        local b = Utility.Create("TextButton", {
            Size              = UDim2.new(0, 26, 0, 26),
            BackgroundColor3  = theme.Surface3,
            Text              = label,
            TextColor3        = theme.TextSecondary,
            TextSize          = 12,
            Font              = Enum.Font.GothamBold,
            ZIndex            = 6,
            Parent            = ctrlFrame,
        })
        Utility.AddCorner(b, theme.CornerSm)
        Utility.AddStroke(b, theme.Border, 1)
        b.MouseEnter:Connect(function()
            Utility.Tween(b, TWEEN_FAST, { BackgroundColor3 = color, TextColor3 = Color3.fromRGB(255,255,255) })
        end)
        b.MouseLeave:Connect(function()
            Utility.Tween(b, TWEEN_FAST, { BackgroundColor3 = theme.Surface3, TextColor3 = theme.TextSecondary })
        end)
        return b
    end

    local minimizeBtn = makeCtrlBtn("‚îÄ", theme.Warning)
    local hideBtn     = makeCtrlBtn("‚óª", theme.Info)
    local closeBtn    = makeCtrlBtn("‚úï", theme.Error)

    -- ‚îÄ‚îÄ‚îÄ SIDEBAR ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    local sidebar = Utility.Create("Frame", {
        Name              = "Sidebar",
        Size              = UDim2.new(0, theme.SidebarWidth, 1, -theme.TitlebarHeight),
        Position          = UDim2.new(0, 0, 0, theme.TitlebarHeight),
        BackgroundColor3  = theme.Background,
        ZIndex            = 3,
        Parent            = window,
    })

    Utility.Create("Frame", {
        Size              = UDim2.new(0, 1, 1, 0),
        Position          = UDim2.new(1, -1, 0, 0),
        BackgroundColor3  = theme.Border,
        BorderSizePixel   = 0,
        ZIndex            = 4,
        Parent            = sidebar,
    })

    local tabList = Utility.Create("Frame", {
        Name              = "TabList",
        Size              = UDim2.new(1, 0, 1, 0),
        BackgroundTransparency = 1,
        Parent            = sidebar,
    })
    Utility.AddListLayout(tabList, Enum.FillDirection.Vertical, UDim.new(0, 2))
    Utility.AddPadding(tabList, 8, 6, 8, 6)

    -- ‚îÄ‚îÄ‚îÄ CONTENT AREA ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    local contentArea = Utility.Create("Frame", {
        Name              = "Content",
        Size              = UDim2.new(1, -theme.SidebarWidth, 1, -theme.TitlebarHeight),
        Position          = UDim2.new(0, theme.SidebarWidth, 0, theme.TitlebarHeight),
        BackgroundColor3  = theme.Surface,
        ClipsDescendants  = true,
        ZIndex            = 2,
        Parent            = window,
    })
    -- Round bottom-right corner
    Utility.AddCorner(contentArea, theme.CornerLg)

    -- ‚îÄ‚îÄ‚îÄ WINDOW STATE ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    local visible   = true
    local minimized = false

    minimizeBtn.MouseButton1Click:Connect(function()
        minimized = not minimized
        if minimized then
            sidebar.Visible     = false
            contentArea.Visible = false
            Utility.Tween(window, TWEEN_MED, {
                Size = UDim2.new(0, winSize.X, 0, theme.TitlebarHeight),
            })
        else
            Utility.Tween(window, TWEEN_MED, {
                Size = UDim2.new(0, winSize.X, 0, winSize.Y),
            })
            task.delay(0.26, function()
                sidebar.Visible     = true
                contentArea.Visible = true
            end)
        end
    end)

    hideBtn.MouseButton1Click:Connect(function()
        visible = false
        Utility.Tween(window, TWEEN_MED, { BackgroundTransparency = 1 })
        task.delay(0.26, function() window.Visible = false end)
        NotifLib.Notify({
            Title   = "Hub Hidden",
            Message = "Press " .. toggleKey.Name .. " to reopen.",
            Type    = "info",
            Duration = 3,
        })
    end)

    closeBtn.MouseButton1Click:Connect(function()
        NotifLib.Notify({ Title = "Unloading...", Message = "SpeedX Hub is shutting down.", Type = "warn", Duration = 2 })
        task.delay(0.5, function()
            Utility.Tween(window, TWEEN_SLOW, { BackgroundTransparency = 1 })
            task.delay(0.45, function() gui:Destroy() end)
        end)
    end)

    -- Toggle key
    UserInputService.InputBegan:Connect(function(input, gp)
        if gp then return end
        if input.KeyCode == toggleKey then
            if not visible then
                visible = true
                -- If it was minimized, restore fully
                if minimized then
                    minimized = false
                    sidebar.Visible     = true
                    contentArea.Visible = true
                    window.Size = UDim2.new(0, winSize.X, 0, winSize.Y)
                end
                window.Visible = true
                Utility.Tween(window, TWEEN_SPRING, { BackgroundTransparency = 0 })
            else
                visible = false
                Utility.Tween(window, TWEEN_MED, { BackgroundTransparency = 1 })
                task.delay(0.26, function() window.Visible = false end)
            end
        end
    end)

    -- ‚îÄ‚îÄ‚îÄ WINDOW DRAGGING ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    do
        local dragging  = false
        local dragStart = Vector2.new(0, 0)
        local winStartX = 0
        local winStartY = 0

        titlebar.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or
               input.UserInputType == Enum.UserInputType.Touch then
                -- Snap to pixel-based positioning on first drag
                local absPos = window.AbsolutePosition
                winStartX   = absPos.X
                winStartY   = absPos.Y
                dragStart   = Vector2.new(input.Position.X, input.Position.Y)
                dragging    = true
                -- Switch away from scale-based so delta math is exact
                window.AnchorPoint = Vector2.new(0, 0)
                window.Position    = UDim2.new(0, winStartX, 0, winStartY)
            end
        end)

        UserInputService.InputEnded:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or
               input.UserInputType == Enum.UserInputType.Touch then
                dragging = false
            end
        end)

        RunService.Heartbeat:Connect(function()
            if not dragging then return end
            local pos      = UserInputService:GetMouseLocation()
            local delta    = pos - dragStart
            local scrSize  = workspace.CurrentCamera.ViewportSize
            local newX = math.clamp(winStartX + delta.X, 0, scrSize.X - window.AbsoluteSize.X)
            local newY = math.clamp(winStartY + delta.Y, 0, scrSize.Y - theme.TitlebarHeight)
            window.Position = UDim2.new(0, newX, 0, newY)
        end)
    end

    -- ‚îÄ‚îÄ‚îÄ TAB SYSTEM ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    local tabs = {}
    local activeTab = nil

    local Window = {}

    function Window:AddTab(opts)
        --[[ opts = { Title = string, Icon = string (optional rbxassetid) } ]]
        local tabTitle = opts.Title or ("Tab " .. (#tabs + 1))

        -- Sidebar button
        local tabBtn = Utility.Create("TextButton", {
            Name              = "Tab_" .. tabTitle,
            Size              = UDim2.new(1, 0, 0, 34),
            BackgroundColor3  = theme.Surface2,
            BackgroundTransparency = 1,
            Text              = "",
            ZIndex            = 5,
            Parent            = tabList,
        })
        Utility.AddCorner(tabBtn, theme.CornerSm)

        -- Active indicator
        local activeLine = Utility.Create("Frame", {
            Size              = UDim2.new(0, 3, 0.6, 0),
            AnchorPoint       = Vector2.new(0, 0.5),
            Position          = UDim2.new(0, 0, 0.5, 0),
            BackgroundColor3  = theme.Accent,
            BackgroundTransparency = 1,
            ZIndex            = 6,
            Parent            = tabBtn,
        })
        Utility.AddCorner(activeLine, UDim.new(0, 2))

        -- Icon (if any)
        if opts.Icon then
            Utility.Create("ImageLabel", {
                Size              = UDim2.new(0, 18, 0, 18),
                Position          = UDim2.new(0, 10, 0.5, -9),
                BackgroundTransparency = 1,
                Image             = opts.Icon,
                ZIndex            = 6,
                Parent            = tabBtn,
            })
        end

        local tabLabel = Utility.Create("TextLabel", {
            Size              = UDim2.new(1, -(opts.Icon and 38 or 14), 1, 0),
            Position          = UDim2.new(0, opts.Icon and 34 or 12, 0, 0),
            BackgroundTransparency = 1,
            Text              = tabTitle,
            TextColor3        = theme.TextSecondary,
            TextSize          = 14,
            Font              = Enum.Font.GothamBold,
            TextXAlignment    = Enum.TextXAlignment.Left,
            ZIndex            = 6,
            Parent            = tabBtn,
        })

        -- Tab content frame
        local tabFrame = Utility.Create("Frame", {
            Name              = "TabFrame_" .. tabTitle,
            Size              = UDim2.new(1, 0, 1, 0),
            BackgroundTransparency = 1,
            Visible           = false,
            ZIndex            = 3,
            Parent            = contentArea,
        })

        local tabObj = BuildTab(tabBtn, tabFrame, theme)

        local function selectTab()
            -- Deactivate all tabs using stored refs
            for _, t in pairs(tabs) do
                t._frame.Visible = false
                Utility.Tween(t._btn,        TWEEN_FAST, { BackgroundTransparency = 1 })
                Utility.Tween(t._activeLine, TWEEN_FAST, { BackgroundTransparency = 1 })
                Utility.Tween(t._label,      TWEEN_FAST, { TextColor3 = theme.TextSecondary })
            end
            -- Activate this tab
            tabFrame.Visible = true
            Utility.Tween(tabBtn,     TWEEN_FAST, { BackgroundTransparency = 0.88 })
            tabBtn.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            Utility.Tween(activeLine, TWEEN_FAST, { BackgroundTransparency = 0 })
            Utility.Tween(tabLabel,   TWEEN_FAST, { TextColor3 = theme.TextPrimary })
            activeTab = tabObj
        end

        tabBtn.MouseButton1Click:Connect(selectTab)
        tabBtn.MouseEnter:Connect(function()
            if activeTab ~= tabObj then
                Utility.Tween(tabBtn, TWEEN_FAST, { BackgroundTransparency = 0.96 })
            end
        end)
        tabBtn.MouseLeave:Connect(function()
            if activeTab ~= tabObj then
                Utility.Tween(tabBtn, TWEEN_FAST, { BackgroundTransparency = 1 })
            end
        end)

        tabObj._btn        = tabBtn
        tabObj._activeLine = activeLine
        tabObj._label      = tabLabel
        tabObj._name       = tabTitle
        tabObj._select     = selectTab   -- store function ref for search bar
        table.insert(tabs, tabObj)

        -- Auto-select first tab
        if #tabs == 1 then selectTab() end

        return tabObj
    end

    -- ‚îÄ‚îÄ‚îÄ GLOBAL NOTIFY ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function Window:Notify(opts)
        NotifLib.Notify(opts)
    end

    -- ‚îÄ‚îÄ‚îÄ DESTROY ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function Window:Destroy()
        gui:Destroy()
    end

    -- ‚îÄ‚îÄ‚îÄ SEARCH (navigates tabs by keyword) ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    searchBox:GetPropertyChangedSignal("Text"):Connect(function()
        local q = searchBox.Text:lower()
        if q == "" then return end
        for _, t in pairs(tabs) do
            if t._name:lower():find(q, 1, true) then
                if t._select then t._select() end
                break
            end
        end
    end)

    -- ‚îÄ‚îÄ‚îÄ INITIAL NOTIFICATION ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    task.delay(options.Intro and 2.2 or 0.5, function()
        NotifLib.Notify({
            Title   = options.Title or "SpeedX Hub",
            Message = "Loaded! Toggle with " .. toggleKey.Name,
            Type    = "success",
            Duration = 3,
        })
    end)

    return Window
end

-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
--  STANDALONE NOTIFY (can be called without a window)
-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
function SX:Notify(opts)
    if not NotifGui then NotifLib.Init() end
    NotifLib.Notify(opts)
end

-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
--  RETURN LIBRARY
-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
return SX
