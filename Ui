        Size              = UDim2.new(0, 160, 1, 0),
        Position          = UDim2.new(0, 48, 0, 0),
        BackgroundTransparency = 1,
        Text              = options.Title or "SpeedX Hub",
        TextColor3        = theme.TextPrimary,
